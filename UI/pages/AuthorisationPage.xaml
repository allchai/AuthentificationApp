<Page x:Class="UI.pages.AuthorisationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UI.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorisationPage"
      Background="#fff">

    <Grid>
        <StackPanel Style="{StaticResource Background}" HorizontalAlignment="Center" VerticalAlignment="Center" Height="400" Width="300">
            <TextBlock Text="Логин: "/>
            <TextBox x:Name="txtblLogin"/>
            <TextBlock Text="Пароль: "/>
            <TextBox x:Name="txtblPassword"/>
            <TextBlock Style="{StaticResource Header}" Text="Каптча"/>
            <TextBlock Text="Текст капчи:"/>
            <TextBlock x:Name="txtbCaptcha" Visibility="Collapsed"/>
            <Grid HorizontalAlignment="Stretch" Margin="0 5 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="txtbxCaptcha" Style="{StaticResource GridTextBox}" Grid.Column="0"/>
                <Button x:Name="btnCheckCaptcha" Style="{StaticResource CaptchaButton}" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="CheckCaptcha">
                    <Image Source="/images/check.png"/>
                </Button>
            </Grid>
            <TextBlock x:Name="txtblCaptchaResult" Visibility="Collapsed"/>
            <Grid HorizontalAlignment="Stretch" Margin="0 10 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnEnter" Content="Войти" Grid.Column="0" Click="TryEnter"/>
                <Button x:Name="btnGuestEnter" Content="Войти как гость" Margin="5 0 5 0" Grid.Column="1" Click="GuestEnter"/>
            </Grid>

            <TextBlock x:Name="txtblError" TextWrapping="Wrap" Foreground="Red" Visibility="Hidden" FontSize="10"/>
        </StackPanel>
    </Grid>
</Page>
