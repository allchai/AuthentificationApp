<Page x:Class="UI.pages.AdminPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UI.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPanel"
      Background="#fff">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button x:Name="btnReturn" Grid.Row="0" Width="150" HorizontalAlignment="Left" Margin="20 0 0 0" Click="Return">
                <TextBlock Text="Назад" Foreground="#fff" FontSize="24" VerticalAlignment="Center"/>
            </Button>

            <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Right" Orientation="Horizontal">
                <ComboBox x:Name="cmbbxFilter" Width="175" Margin="0 10 10 10" SelectedValuePath="Name">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" TextTrimming="CharacterEllipsis" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <TextBox x:Name="txtbxSearch" VerticalAlignment="Center" Width="250" Height="25" Margin="0 0 10 0"/>
                <Button x:Name="btnSearch" Width="35" Height="35" Background="#f0f0f0" Margin="0 0 5 0" Click="ApplyFilters">
                    <Image Source="/images/search.png"/>
                </Button>
                <Button x:Name="btnCancelSearch" Width="35" Height="35" Background="#fff" Click="ClearFilters">
                    <Image Source="/images/cancel.png"/>
                </Button>
            </StackPanel>

            <ListView x:Name="UsersListView" ItemsSource="{Binding User}" Grid.Row="1">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <EventSetter Event="MouseDoubleClick" Handler="EditUser"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Width="200" Height="285" Background="#FFAAAAAA" Margin="5">
                            <Image Source="/images/user.png" Height="120" Margin="0 5 0 0"/>
                            <TextBlock Text="{Binding Occupation.Name}" TextAlignment="Center" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Name}" TextAlignment="Center" TextWrapping="WrapWithOverflow"/>
                            <TextBlock Text="{Binding Email}" TextAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <StackPanel x:Name="UserEditor" Style="{StaticResource Background}" Width="300" Height="425" Visibility="Collapsed">
            <Grid Margin="0 10 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>

                <TextBlock Style="{StaticResource EditorLabel}" Text="Имя:" Grid.Column="0" Grid.Row="0"/>
                <TextBox x:Name="txtbxName" Style="{StaticResource EditorField}" Grid.Column="1" Grid.Row="0"/>
                <TextBlock Style="{StaticResource EditorLabel}" Text="Фамилия:" Grid.Column="0" Grid.Row="1"/>
                <TextBox x:Name="txtbxLastName" Style="{StaticResource EditorField}" Grid.Column="1" Grid.Row="1"/>
                <TextBlock Style="{StaticResource EditorLabel}" Text="Отчество:" Grid.Column="0" Grid.Row="2"/>
                <TextBox x:Name="txtbxSecondName" Style="{StaticResource EditorField}" Grid.Column="1" Grid.Row="2"/>
                <TextBlock Style="{StaticResource EditorLabel}" Text="Email:" Grid.Column="0" Grid.Row="3"/>
                <TextBox x:Name="txtbxEmail" Style="{StaticResource EditorField}" Grid.Column="1" Grid.Row="3"/>
                <TextBlock Style="{StaticResource EditorLabel}" Text="Должность:" Grid.Column="0" Grid.Row="4"/>
                <ComboBox Style="{StaticResource EditorField}" SelectedValuePath="Content" FontSize="6" Grid.Column="1" Grid.Row="4" Visibility="Collapsed"/>

                <ComboBox x:Name="cmbbxOccupation" Style="{StaticResource EditorField}" Grid.Column="1" Grid.Row="4">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding }" TextTrimming="CharacterEllipsis" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <TextBlock Style="{StaticResource EditorLabel}" Text="Логин:" Grid.Column="0" Grid.Row="5"/>
                <TextBox x:Name="txtbxLogin" Style="{StaticResource EditorField}" Grid.Column="1" Grid.Row="5"/>
                <TextBlock Style="{StaticResource EditorLabel}" Text="Пароль:" Grid.Column="0" Grid.Row="6"/>
                <TextBox x:Name="txtbxPassword" Style="{StaticResource EditorField}" Grid.Column="1" Grid.Row="6"/>
            </Grid>

            <TextBlock x:Name="txtblEnterError" Text="Обязательное поле пустое!" TextAlignment="Center" Foreground="Red" Margin="0 25 0 0" FontSize="24" Visibility="Hidden"/>
            <Button x:Name="CancelButton" Margin="0 5 0 0" Height="50" Click="CancelEdit" >
                <TextBlock FontSize="24" Text="Отменить" Foreground="#fff" VerticalAlignment="Center"/>
            </Button>
            <Button x:Name="SaveChangesButton"  Margin="0 10 0 0" Height="50" Click="SaveChanges" >
                <TextBlock FontSize="24" Text="Сохранить" Foreground="#fff" VerticalAlignment="Center"/>
            </Button>
        </StackPanel>

        <StackPanel x:Name="ErrorMessagePanel" Width="225" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="15 10 10 10" Visibility="Collapsed">
        </StackPanel>
        
    </Grid>
</Page>
