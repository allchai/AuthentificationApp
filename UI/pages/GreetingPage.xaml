<Page x:Class="UI.pages.GreetingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UI.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GreetingPage"
      Background="#fff">

    <Grid>
        <TextBlock x:Name="txtblGreeting" HorizontalAlignment="Center" Margin="0,100,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontSize="48"/>
        <TextBlock x:Name="txtblError" HorizontalAlignment="Center" Margin="0,250,0,0" TextWrapping="Wrap" Text="Сейчас нерабочие часы!" VerticalAlignment="Top" FontSize="26" Foreground="Red" Visibility="Hidden"/>
        <Button x:Name="btnEnter" Width="250" Height="75" Margin="0, 300, 0, 0" Click="GoAuthorisationPage">
            <TextBlock Text="Войти" Foreground="#fff" FontSize="36" VerticalAlignment="Center" FontWeight="Bold"/>
        </Button>

    </Grid>
</Page>
