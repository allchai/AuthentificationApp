<Page x:Class="UI.pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UI.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage"
      Background="#fff">

    <Grid>
        <TextBlock x:Name="txtblGreeting" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontSize="22"/>
        <StackPanel Style="{StaticResource Background}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="350">
            <StackPanel Height="150" Orientation="Horizontal" Margin="0 10 0 0">
                <Image Source="/images/user.png"/>
                <StackPanel HorizontalAlignment="Stretch">
                    <TextBlock Text="Логин:" FontSize="24"/>
                    <TextBlock x:Name="txtblLogin" Foreground="Green"/>
                    <TextBlock Text="Должность:" FontSize="24"/>
                    <TextBlock x:Name="txtblOccupation" Foreground="Green"/>
                </StackPanel>
            </StackPanel>
        
            <Button x:Name="btnEnterAdminPanel" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top" Width="270" Click="EnterAdminPanel">
                <TextBlock Text="Войти в админ.панель" Foreground="#fff" FontSize="24" VerticalAlignment="Center"/>
            </Button>
            <Button x:Name="btnUnlogin" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="270" Click="LogOut">
                <TextBlock Text="Выйти" Foreground="#fff" FontSize="24" VerticalAlignment="Center"/>
            </Button>
            
        </StackPanel>


    </Grid>
</Page>
