<Application x:Class="UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UI"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Rectangle">
            <Setter Property="Fill" Value="#FFAAAAAA"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Candara"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="10 10 10 0"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Candara"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="20 5 20 5"/>
            <Setter Property="Height" Value="25"/>
        </Style>

        <Style x:Key="GridTextBox" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Candara"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Margin" Value="5 0 5 0"/>
        </Style>

        <Style x:Key="Header" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Candara"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Margin" Value="0 15 0 0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#FF83DA83"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Candara"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5 0 5 0"/>
            <Setter Property="Background" Value="#FF6CCE58"/>
        </Style>

        <Style x:Key="CaptchaButton" TargetType="Button">
            <Setter Property="Width" Value="25"/>
            <Setter Property="Height" Value="25"/>
        </Style>

        <Style x:Key="Background" TargetType="StackPanel">
            <Setter Property="Background" Value="#FFAAAAAA"/>
        </Style>

        <Style x:Key="EditorLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>

        <Style x:Key="EditorField" TargetType="{x:Type Control}">
            <Setter Property="Margin" Value="5 2 2 2"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <Style x:Key="ErrorMessage" TargetType="StackPanel">
            <Setter Property="Background" Value="#FFDE4F4F"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Height" Value="75"/>
            <Setter Property="Margin" Value="0 10 0 0"/>
        </Style>

        <Style x:Key="ErrorText" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="WrapWithOverflow"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

    </Application.Resources>
</Application>
